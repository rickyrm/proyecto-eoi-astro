<script>
document.addEventListener("DOMContentLoaded", () => {
  // Seleccionamos todos los enlaces del pie de página
  const footerLinks = document.querySelectorAll(".footer-links a");

  // Iteramos sobre los enlaces para asignar el comportamiento
  footerLinks.forEach(link => {
    link.addEventListener("click", (event) => {
      const href = link.getAttribute("href");

      // Si el enlace contiene "/index.html" y tiene un hash (#), redirigir a la sección correspondiente
      if (href.includes("/index.html")) {
        const targetSection = href.split("#")[1]; // Obtenemos la sección de la URL
        if (targetSection) {
          // Cambia la URL y lleva al hash correspondiente en index.html
          window.location.href = `/index.html#${targetSection}`;
        }
      } else {
        // Si el enlace es para otras páginas .html, navegar a ellas normalmente
        window.location.href = href;
      }
      event.preventDefault(); // Prevenimos la acción por defecto
    });
  });
});
</script>

